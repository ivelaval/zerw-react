{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "target": "es5",
    "module": "es6",
    "lib": ["es5", "es6", "dom"],
    "moduleResolution": "node",
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "allowJs": true,
    "esModuleInterop": true,
    "types": ["react", "jest"],
    "paths": {
      "@/*": ["*"],
      "@app/*": ["app/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["app/components/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
