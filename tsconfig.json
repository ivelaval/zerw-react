{
  "compilerOptions": {
    "jsx": "react",
    "module": "es6",
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "moduleResolution": "node",
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "allowJs": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
